#!/bin/bash
title "nodel"
help .cd | indent

function run() {
  build
  $(
    cd dist
    serve
  )
}

function build() {
  npm run build
}

function release() {
  npm run release
  npx uglifyjs --compress --mangle -- dist/nodel.js > dist/nodel.min.js
  $(
    cd dist
    git add .
    git commit -m "publishing release"
    git push --force origin gh-pages
  )
}
