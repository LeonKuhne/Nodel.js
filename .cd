#!/bin/bash
title "nodel"
help .cd | indent

function run() {
  build
  $(
    cd demo
    serve
  )
}

function build() {
  npm run build
  cp dist/nodel.js demo/nodel.js
}

function release() {
  npm run release
  cp dist/nodel.js demo/nodel.js
  npx uglifyjs --compress --mangle -- dist/nodel.js > dist/nodel.min.js
  $(
    cd demo
    git push --force origin gh-pages
  )
}
