#!/bin/bash
title "nodel"
help .cd | indent

function run() {
  build
  $(
    cd dist
    serve
    cd -
  )
}

function build() {
  npm run build
  clean
}

function release() {
  npm run release
  npx uglifyjs --compress --mangle -- dist/nodel.js > dist/nodel.min.js
}

function clean() {
  sed -i '' "/^.*console\.debug.*$/d" dist/nodel.js
}
